<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Form Pilote</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/img/logo.png">
    <link rel="stylesheet" href="/public/css/form.css">
    <link rel="stylesheet" href="/public/css/navbar.css">
</head>

<body>
    <%- include('../layouts/header.ejs') %>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 illus">
                    <img id="human" src="/public/img/create.png" alt="">
                </div>
                <div class="col-lg-6 col-sm-12 registration-form">
                    <form class="needs-validation" method="POST" action="/user/addpilote" novalidate>
                        <div class="titre">
                            <h1>Creation Pilote</h1>
                        </div>
                        <%if (message) {%>
                            <div class="mt-5 alert alert-<%= message.type %>  alert-dismissible fade show">
                                <strong>
                                    <%= message.intro %>
                                </strong><br>
                                <%= message.message %>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                            </div>
                            <%}%>
                                <div class="form-group">
                                    <input type="text" class="form-control item" name="nomp" placeholder="Nom du pilote"
                                        required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control item" name="prenomp"
                                        placeholder="Prénom du pilote" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control item" name="emailp"
                                        placeholder="E-mail du pilote" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control item" name="usernamep"
                                        placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control item" name="passwordp"
                                        placeholder="Password" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-block create-company">Créer un pilote</button>
                                </div>
                    </form>
                </div>
            </div>
        </div>
        <%- include ('../layouts/footer.ejs') %>

            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>

</html>