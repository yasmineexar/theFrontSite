<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Formulaire entreprise</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/form.css">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/img/logo.png">
    <link rel="stylesheet" href="/public/css/navbar.css">
</head>

<body>

    <%- include('../layouts/header.ejs') %>

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 illus">
                    <img class="human" src="/public/img/create.png" alt="">
                </div>
                <div class="col-lg-6 col-sm-12 registration-form">
                    <form class="needs-validation" method="POST" action="/entreprise/add" novalidate>

                        <div class="titre">
                            <h1>Creation Entreprise</h1>
                        </div>
                        <%if (message) {%>
                            <div class="mt-5 alert alert-<%= message.type %>  alert-dismissible fade show">
                                <strong>
                                    <%= message.intro %>
                                </strong><br>
                                <%= message.message %>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                            </div>
                            <%}%>
                                <div class="uploadimg row">
                                    <div class="col-2">
                                        <img id="imgholder" class="uploadjs" src="http://placehold.it/100"
                                            alt="your image" />
                                    </div>
                                    <div class="file-input col-10">
                                        <input type="file" name="uploaded_image" onchange="readURL(this);" id="file"
                                            class="file" accept="">
                                        <label for="file">Télécharger une image (Logo)</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control item" name="Raison_social" id="Raison_social"
                                        placeholder="Raison sociale" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control item" name="Secteur_activite"
                                        id="Secteur_activite" placeholder="Secteur d'activite" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control item" name="Site_web" id="site"
                                        placeholder="Site Web" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control item" name="Localite" id="Localite"
                                        placeholder="Localité" required>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" name="Description" id="Description" rows="3"
                                        placeholder="Description..." required></textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-block create-company">Créer une
                                        entreprise</button>
                                </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include ('../layouts/footer.ejs') %>

            <script>
                function readURL(input) {
                    if (input.files && input.files[0]) {
                        var reader = new FileReader();

                        reader.onload = function (e) {
                            $('.uploadjs')
                                .attr('src', e.target.result);
                        };

                        reader.readAsDataURL(input.files[0]);
                    }
                }</script>

            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>

</html>