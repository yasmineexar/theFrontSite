<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Formulaire offre</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/form.css">
    <link rel="stylesheet" href="/public/css/navbar.css">
</head>

<body>
    <%- include('../layouts/header.ejs') %>

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 illus">
                    <img class="human2" src="/public/img/metier.png" alt="">
                </div>
                <div class="col-lg-6 col-sm-12 registration-form">
                    <form class="needs-validation" method="POST" novalidate>
                        <div class="titre">
                            <h1>Creation Fiche Metier</h1>
                        </div>
                        <!--upload button-->
                        <div class="uploadimg row">
                            <div class="col-2">
                                <img id="imgholder" class="uploadjs" src="http://placehold.it/100x150"
                                    alt="your image" />
                            </div>
                            <div class="file-input col-10">
                                <input type="file" onchange="readURL(this);" name="Image" id="file" class="file">
                                <label for="file">Télécharger une image</label>
                            </div>
                        </div>
                        <!--upload button-->
                        <div class="form-group">
                            <input type="text" class="form-control item" name="Nom" id="titre"
                                placeholder="Nom du métier" required>
                        </div>
                        <div class="form-group">
                            <select type="text" class="form-control item" name="Id_faculte" id="Faculte"
                                placeholder="Faculté concernée" required>
                                <option></option>
                                <% faculte.forEach(element=> { %>
                                    <option value="<%=element.Id_faculte%>">
                                        <%=element.Nom%>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="Description" name="Description" id="description"
                                rows="5" placeholder="Description..." required></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block create-company">Créer un métier</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <%- include ('../layouts/footer.ejs') %>

            <script src="/public/js/upload.js"></script>
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>

</html>